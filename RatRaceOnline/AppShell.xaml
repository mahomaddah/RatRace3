<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RatRace3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RatRace3"
    xmlns:View="clr-namespace:RatRace3.View"
    Navigating="Shell_Navigating"
  
    
    

    Title="RatRace3">

    <Shell.ToolbarItems>
        <ToolbarItem 
          x:Name="TurnMusicBtn"
          Text="Music"
          IconImageSource="music_off.png"
          Clicked="TurnMusicBtn_Clicked" />
        
    </Shell.ToolbarItems>

    <ShellContent
      Title="Home"
      ContentTemplate="{DataTemplate local:MainPage}"
      Route="MainPage" />

    <ShellContent IsVisible="True" Title="Game Page" ContentTemplate="{DataTemplate View:GameView}" Route="gameview" />

    <FlyoutItem Title="Market Page">
        <ShellContent IsVisible="True" Title="Market Page" ContentTemplate="{DataTemplate local:MarketPage} "  
      Route="MarketPage"/>
        
    </FlyoutItem>
    


</Shell>
